{{#> app}}
{{#*inline "content"}}
    {{#with viewData.product}}
        <div class="card">
            <div class="row g-0">
                <div class="col-md-3">
                    <img src="/img/products/{{getImage}}" class="img-fluid" alt="{{getName}}" width="250px">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">{{getName}}</h5>
                        <p class="card-text">{{getDescription}}</p>
                        <p class="card-text"><strong>${{getPrice}}</strong></p>
                    </div>
                </div>
            </div>
        </div>
    {{/with}}
{{/inline}}
{{/app}}
