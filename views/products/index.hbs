{{#> app}}

{{#*inline "content"}}

    <div class="row">
        {{#each viewData.products}}
            <div class="col-sm-4 col-sm-4 col-md-3 col-lg-2 mb-2">
                <div class="card">
                    <img src="/img/products/{{getImage}}" class="card-img-top img-card" alt="">
                    <div class="card-body text-center">
                        <a href="/products/{{getId}}" class="btn bg-primary text-white">{{getName}}</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

{{/inline}}
{{/app}}